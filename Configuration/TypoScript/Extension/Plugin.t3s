plugin.tx_play {
	view {
		layoutRootPaths.0 = {$plugin.tx_play.view.layoutRootPath}
		templateRootPaths.0 = {$plugin.tx_play.view.templateRootPath}
		partialRootPaths.0 = {$plugin.tx_play.view.partialRootPath}
	}

	persistence {
		storagePid = {$plugin.tx_play.persistence.storagePid}
	}

	mvc {
		callDefaultActionIfActionCantBeResolved = 1
	}

	settings {
		svg {
			path = {$plugin.tx_play.settings.svg.path}
		}
	}
}